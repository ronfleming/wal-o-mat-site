@page "/gallery"
@inject QuizDataService DataService
@inject LocalizationService L
@inject NavigationManager Navigation
@inject IConfiguration Config
@implements IDisposable

<PageTitle>@L.Get("gallery_title") – Wal-O-Mat</PageTitle>
<HeadContent>
    <meta name="description" content="@L.Get("gallery_description")" />
    <meta property="og:title" content="@L.Get("gallery_title") – Wal-O-Mat" />
    <meta property="og:description" content="@L.Get("gallery_description")" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@(_siteBaseUrl)/gallery" />
    <meta property="og:image" content="@(_siteBaseUrl)/images/og-image.jpg" />
    <link rel="canonical" href="@(_siteBaseUrl)/gallery" />
    @if (_quizData != null)
    {
        @((MarkupString)GetGalleryJsonLd())
    }
</HeadContent>

<div class="gallery-container">
    <header class="gallery-header">
        <h1>@L.Get("gallery_title")</h1>
        <p class="gallery-intro">@L.Get("gallery_intro")</p>
    </header>

    @if (_isLoading)
    {
        <div class="loading">@L.Get("quiz_loading")</div>
    }
    else if (_quizData != null)
    {
        <div class="whale-gallery">
            @foreach (var whale in _quizData.Whales)
            {
                <a href="/whale/@whale.Id" class="whale-gallery-card">
                    <img src="@whale.ImagePath" alt="@whale.GetName(L.CurrentLanguage)" />
                    <div class="whale-card-info">
                        <h3>@whale.GetName(L.CurrentLanguage)</h3>
                        <p class="whale-scientific">@whale.ScientificName</p>
                        <div class="whale-traits">
                            @string.Join(" · ", whale.GetTraits(L.CurrentLanguage).Take(3))
                        </div>
                    </div>
                </a>
            }
        </div>
    }

    <footer class="gallery-footer">
        <a href="/">@L.Get("back_home")</a>
    </footer>
</div>

@code {
    private bool _isLoading = true;
    private QuizData? _quizData;
    private string _siteBaseUrl = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        L.OnLanguageChanged += StateHasChanged;
        _siteBaseUrl = Config["SiteBaseUrl"] ?? "https://wal-o-mat.net";
        _quizData = await DataService.LoadQuizDataAsync();
        _isLoading = false;
    }

    public void Dispose()
    {
        L.OnLanguageChanged -= StateHasChanged;
    }

    private string GetGalleryJsonLd()
    {
        if (_quizData == null) return string.Empty;

        var items = _quizData.Whales.Select((whale, i) => new Dictionary<string, object>
        {
            ["@type"] = "ListItem",
            ["position"] = i + 1,
            ["url"] = $"{_siteBaseUrl}/whale/{whale.Id}",
            ["name"] = $"{whale.NameDe} ({whale.NameEn})"
        }).ToArray();

        var schema = new Dictionary<string, object>
        {
            ["@context"] = "https://schema.org",
            ["@type"] = "ItemList",
            ["name"] = "Wal-O-Mat Whale Species",
            ["description"] = "All whale species in the Wal-O-Mat personality quiz",
            ["numberOfItems"] = _quizData.Whales.Count,
            ["itemListElement"] = items
        };

        var json = System.Text.Json.JsonSerializer.Serialize(schema, new System.Text.Json.JsonSerializerOptions
        {
            WriteIndented = true,
            Encoder = System.Text.Encodings.Web.JavaScriptEncoder.UnsafeRelaxedJsonEscaping
        });

        return $"<script type=\"application/ld+json\">{json}</script>";
    }
}

