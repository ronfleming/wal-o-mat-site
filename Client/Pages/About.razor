@page "/about"
@inject LocalizationService L
@implements IDisposable

<PageTitle>@L.Get("about_title") â€“ Wal-O-Mat</PageTitle>
<HeadContent>
    <meta name="description" content="@L.Get("meta_description")" />
    <link rel="canonical" href="https://www.wal-o-mat.net/about" />
</HeadContent>

<div class="about-container">
    <h1>@L.Get("about_title")</h1>

    <section>
        <h2>@L.Get("about_what_title")</h2>
        <p>@((MarkupString)L.Get("about_what_1"))</p>
        <p>@L.Get("about_what_2")</p>
    </section>

    <section>
        <h2>@L.Get("about_how_title")</h2>
        <p>@L.Get("about_how_1")</p>
        <p>@L.Get("about_how_2")</p>
    </section>

    <section>
        <h2>@L.Get("about_scoring_title")</h2>
        <p>@L.Get("about_scoring_intro")</p>
        <ul>
            <li>@((MarkupString)L.Get("about_scoring_2pts"))</li>
            <li>@((MarkupString)L.Get("about_scoring_1pt"))</li>
            <li>@((MarkupString)L.Get("about_scoring_0pts"))</li>
        </ul>
        <p>@L.Get("about_scoring_note")</p>
    </section>

    <section>
        <h2>@L.Get("about_tech_title")</h2>
        <p>@((MarkupString)L.Get("about_tech_text"))</p>
    </section>

    <section>
        <h2>@L.Get("about_privacy_title")</h2>
        <p>@L.Get("about_privacy_intro")</p>
        <ul>
            <li>@L.Get("about_privacy_no_cookies")</li>
            <li>@L.Get("about_privacy_anonymous")</li>
            <li>@L.Get("about_privacy_retention")</li>
            <li>@L.Get("about_privacy_no_sharing")</li>
        </ul>
        <p>@L.Get("about_privacy_rights")</p>
    </section>

    <div class="back-link">
        <a href="/">@L.Get("back_home")</a>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        L.OnLanguageChanged += StateHasChanged;
    }

    public void Dispose()
    {
        L.OnLanguageChanged -= StateHasChanged;
    }
}
