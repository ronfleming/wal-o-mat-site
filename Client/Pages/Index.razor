@page "/"
@inject LocalizationService L
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>@L.Get("meta_title")</PageTitle>
<HeadContent>
    <meta name="description" content="@L.Get("meta_description")" />
    <meta name="keywords" content="@(L.IsGerman ? "Wal-O-Mat, Wahl-O-Mat Parodie, Wal Quiz, Persönlichkeitstest, Welcher Wal bin ich, Walarten, Orca, Blauwal" : "Wal-O-Mat, Wahl-O-Mat parody, whale quiz, personality test, which whale am I, whale species, orca, blue whale")" />
    <meta property="og:title" content="@L.Get("meta_title")" />
    <meta property="og:description" content="@L.Get("meta_description")" />
    <meta property="og:type" content="website" />
    <link rel="canonical" href="https://wal-o-mat.net/" />
</HeadContent>

<div class="splash-container">
    <header class="splash-header">
        <div class="logo-area">
            <span class="whale-icon">🐋</span>
        </div>
        <h1>@L.Get("splash_title")</h1>
        <p class="tagline">@L.Get("splash_tagline")</p>
    </header>

    <main class="splash-content">
        <div class="about-box">
            <p>@((MarkupString)L.Get("splash_about"))</p>
        </div>

        <div class="intro-text">
            <p>@L.Get("splash_intro")</p>
        </div>

        <button class="start-button" @onclick="StartQuiz">
            @L.Get("splash_start")
        </button>
    </main>

    <footer class="splash-footer">
        <a href="/gallery">@L.Get("gallery_link")</a>
        <span class="footer-separator">|</span>
        <a href="/about-us">@L.Get("about_link")</a>
    </footer>
</div>

@code {
    protected override void OnInitialized()
    {
        L.OnLanguageChanged += StateHasChanged;
    }

    private void StartQuiz()
    {
        Navigation.NavigateTo("/quiz");
    }

    public void Dispose()
    {
        L.OnLanguageChanged -= StateHasChanged;
    }
}
